<?xml version="1.0" encoding="UTF-8"?>
<config>

	<taskLoader>
		<!-- 任务加载周期:分钟 -->
		<period>2</period>
	</taskLoader>

	<!--ftp配置信息,多个任务可以使用同一个FTP配置 -->
	<ftp id="HW_801">
		<!-- 厂家设备IP -->
		<ip>192.168.15.42</ip>
		<!-- ftp端口 -->
		<port>21</port>
		<!-- 用户名 -->
		<username>ftpuser</username>
		<!-- 密码 -->
		<password>Changeme_123</password>
		<!-- 传输模式，port或pasv -->
		<passiveFlag>true</passiveFlag>
		<!-- 传输文件时的缓冲区大小（字节） -->
		<bufferSize>8192</bufferSize>
		<!-- 数据传输超时时间（秒） -->
		<dataTimeout>3600</dataTimeout>
		<!-- 登录重试次数 -->
		<loginTryTimes>5</loginTryTimes>
		<!-- 登录重试间隔时间（秒） -->
		<loginTryDelay>5</loginTryDelay>
		<!-- 执行LIST命令的重试次数 -->
		<listTryTimes>1</listTryTimes>
		<!-- 执行LIST命令的重试间隔时间（秒) -->
		<listTryDelay>1</listTryDelay>
		<!-- 下载重试次数 -->
		<downloadTryTimes>3</downloadTryTimes>
		<!-- 下载重试间隔时间（秒） -->
		<downloadTryDelay>5</downloadTryDelay>
		<!-- FTP连接池测试命令 -->
		<validateCmd>PWD</validateCmd>
		<!-- ftp编码设置,不填则程序自动判断 -->
		<!-- <charset>GBK</charset> -->
		<!-- ftp连接池最连接数 -->
		<maxConnections>5</maxConnections>
		<!-- 获取FTP链接最大等待时间 -->
		<MaxWaitSecond>30</MaxWaitSecond>
		<!-- 是否需要读内容（诺西性能） -->
		<needToReadContent>false</needToReadContent>
	</ftp>
	
	<!--下载任务配置信息 -->
	<task>
		<!-- 任务名称，要求唯一 -->
		<taskName>HW_PM_801</taskName>
		<!-- 任务是否启动 -->
		<isRun>true</isRun>
		<!-- 使用的ftp配置ID -->
		<ftpId>HW_801</ftpId>
		<!-- 任务执行开始时间(格式:yyyy-MM-dd HH:mm:ss) -->
		<startTime>2017-3-3 15:00:00</startTime>
		<!-- 任务执行结束时间(格式:yyyy-MM-dd HH:mm:ss) -->
		<endTime>2027-1-19 11:59:00</endTime>
		<!-- 采集路径时间通配配置说明 -->
		<!-- 时间通配标记为{d}，在{d和}中间填写时间格式,年:yyyy, 月:MM, 天:dd, 24小时:HH, 12小时:hh, 分钟:mm, 
			秒:ss 
		            字母   日期或时间元素                           表示                                                         示例                                 
			 G     Era 标志符               Text                 AD                                   
			 y     年                                       Year                 1996; 96                             
			 M     年中的月份                   Month                July; Jul; 07                        
			 w     年中的周数               Number               27                                   
			 W     月份中的周数             Number               2                                    
			 D     年中的天数               Number               189                                  
			 d     月份中的天数             Number               10                                   
			 F     月份中的星期             Number               2                                    
			 E     星期中的天数             Text                 Tuesday; Tue                         
			 a     Am/pm 标记               Text                 PM                                   
			 H     一天中的小时数（0-23）   Number               0                                    
			 k     一天中的小时数（1-24）   Number               24                                   
			 K     am/pm 中的小时数（0-11） Number               0                                    
			 h     am/pm 中的小时数（1-12） Number               12                                   
			 m     小时中的分钟数           Number               30                                   
			 s     分钟中的秒数             Number               55                                   
			 S     毫秒数                   Number               978                                  
			 z     时区                     General time zone    Pacific Standard Time; PST; GMT-08:00
			 Z     时区                     RFC 822 time zone    -800                                 
		-->
		<!-- 例如 2014-06-24,配置为{dyyyy-MM-dd} -->
		<!-- 请配置人员注意:尽量减少*号所代表的字符，这样有助提高采集效率 -->
		<!-- 如果FTP服务器不支持字符+*文件夹路径，则使用*代替路径 -->
		<!-- 采集路径 -->
		
		<gatherPath>/opt/oss/server/var/fileint/pmneexport/neexport_{dyyyyMMdd}/*/A{dyyyyMMdd.HH*}+0800-*.xml</gatherPath>
   	<timeZone>8</timeZone>
		<!-- 是否需要对下载的gz/zip文件进行解压操作 -->
		<needDecompress>false</needDecompress>
		<!-- 文件下载地址 -->
		<downLoadPath>E:\uwaysoft\OSS2.0\data\download_HW_PM_801\</downLoadPath>
		<!-- ASYN_TASK为异步下载，即扫描文件与下载文件在不同线程执行 -->
		<!-- SYN_TASK为同步FTP下载，即扫描到一个文件后进行下载文件，下载完成后再进行下一个文件的扫描和下载 -->
		<!-- SYN_SFTP_TASK为同步SFTP下载，同上 -->
		<!-- 是否为同步下载任务，默认为此任务 -->
		<workerType>SYN_TASK</workerType>
		<!-- 厂家文件产生周期（分钟） -->
		<fileGeneratePeriod>60</fileGeneratePeriod>
		<!-- 下载线程数目,不大于ftp连接池最连接数-1 -->
		<downLoadJobNum>5</downLoadJobNum>
		<!-- 是否需要对下载的文件进行打包 -->
		<needCompress>false</needCompress>
		<!-- 打包目录 -->
		<compressToPath>E:\uwaysoft\OSS2.0\data\HW_PM_ZIP_1</compressToPath>
		<!-- 打包格式 -->
		<compressPattern>.zip</compressPattern>
		<!-- 采集以及打包延迟时间，任务开始执行的时间为 采集时间点+延迟时间，任务开始打包的时间为 采集时间点+延迟时间+厂家文件周期 -->
		<delayZip>75</delayZip>
		<!-- 压缩文件保留多少个小时的数据,过期后删除,过期时间是从当前任务的采集时间点开始计算 -->
		<retentionTime>72</retentionTime>
		<!-- 文件完整性检测次数,下载完成后检测N次没有本次时间点的新文件产生后开始打包 -->
		<dataCheckTimes>3</dataCheckTimes>
		<!-- 文件完整性检测间隔秒,每次检测之间的间隔 -->
		<dataCheckGapSec>10</dataCheckGapSec>
		<!-- 文件完整性检测时间范围（分钟）, 当"任务采集时间点" 大于 "当前时间" 减去 "dataCheckRegion"时，才进行文件完整检测,如果是填0，则永远检测 -->
		<dataCheckRegion>60</dataCheckRegion>
		<!-- 目录下未扫描到文件后重试扫描次数，0：表示不重试 -->
		<retryListFileCnt>0</retryListFileCnt>
	</task>	

	
</config>